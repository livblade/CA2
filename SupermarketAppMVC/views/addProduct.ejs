<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>Add Product - Ethan's Grains</title>
</head>
<body>
  <!-- Admin navigation bar -->
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add Product</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <!-- Dark mode toggle button -->
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <!-- Page header -->
    <div class="page-header">
      <h2>üì¶ Add New Product</h2>
    </div>

    <!-- Add product form with improved styling -->
    <div class="admin-form-container">
      <div class="admin-form-header">
        <h2>Product Information</h2>
      </div>

      <!-- Display error messages -->
      <% if (errors && errors.length > 0) { %>
        <% errors.forEach(function(error) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% }); %>
      <% } %>

      <!-- Display success messages -->
      <% if (messages && messages.length > 0) { %>
        <% messages.forEach(function(message) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% }); %>
      <% } %>

      <form action="/addProduct" method="POST" enctype="multipart/form-data">
        
        <!-- Basic Information Section -->
        <div class="admin-form-section">
          <h3 class="admin-form-section-title">üìù Basic Information</h3>
          
          <div class="mb-3">
            <label for="name" class="filter-label">Product Name *</label>
            <input type="text" class="form-control" id="name" name="name" required placeholder="Enter product name">
          </div>

          <div class="row g-3">
            <div class="col-md-6">
              <label for="category" class="filter-label">Category *</label>
              <select class="form-select" id="category" name="category" required>
                <option value="">Select category...</option>
                <option value="Fruit">üçé Fruit</option>
                <option value="Vegetable">ü•¶ Vegetable</option>
                <option value="Meat">ü•© Meat</option>
                <option value="Dairy">ü•õ Dairy</option>
                <option value="Bakery">üçû Bakery</option>
                <option value="Other">üì¶ Other</option>
              </select>
            </div>
            <div class="col-md-6">
              <label for="price" class="filter-label">Price ($) *</label>
              <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" required placeholder="0.00">
            </div>
          </div>

          <div class="mb-3">
            <label for="description" class="filter-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3" placeholder="Product description..."></textarea>
            <small class="text-muted">Provide a brief description of the product</small>
          </div>
        </div>

        <!-- Inventory Section -->
        <div class="admin-form-section">
          <h3 class="admin-form-section-title">üìä Inventory</h3>
          
          <div class="mb-3">
            <label for="quantity" class="filter-label">Stock Quantity *</label>
            <input type="number" class="form-control" id="quantity" name="quantity" min="0" step="1" required placeholder="0">
            <small class="text-muted">Number of units available in stock</small>
          </div>
        </div>

        <!-- Product Image Section -->
        <div class="admin-form-section">
          <h3 class="admin-form-section-title">üñºÔ∏è Product Image</h3>
          
          <div class="mb-3">
            <label for="image" class="filter-label">Upload Image *</label>
            <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
            <small class="text-muted">Accepted formats: JPG, PNG, GIF (Max 5MB)</small>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="admin-form-actions">
          <button type="submit" class="btn btn-success">
            ‚úÖ Add Product
          </button>
          <a href="/inventory" class="btn btn-outline-secondary">
            ‚ùå Cancel
          </a>
        </div>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>
