<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>All Orders - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">ğŸª</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="welcome-box">
      <p>Admin: <strong><%= user.username %></strong></p>
    </div>

    <div class="page-header">
      <h2>ğŸ“‹ All Orders</h2>
    </div>

    <% if (!orders || orders.length === 0) { %>
      <div class="empty-state">
        <div class="empty-state-icon">ğŸ“¦</div>
        <h3>No orders yet</h3>
        <p>No customers have placed orders yet</p>
        <a href="/dashboard" class="btn btn-primary">â† Back to Dashboard</a>
      </div>
    <% } else { %>
      <!-- Centered container for orders -->
      <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
          <div class="row g-4">
            <% orders.forEach(function(order) { %>
              <div class="col-12 col-lg-6">
                <div class="product-card order-card">
                  <div class="product-card-body">
                    <!-- Order Header with Customer Info -->
                    <div class="order-card-header" style="display: flex; justify-content: space-between; align-items: flex-start; padding-bottom: 1rem; margin-bottom: 1rem; border-bottom: 2px solid var(--border-color);">
                      <div style="flex: 1;">
                        <h5 class="order-id" style="font-size: 1.25rem; font-weight: 700; margin: 0 0 0.5rem 0;">
                          Order #<%= order.orderId %>
                        </h5>
                        <p class="order-customer-name" style="margin: 0.25rem 0;">
                          <strong>ğŸ‘¤ Customer:</strong> <%= order.username %>
                        </p>
                        <p class="order-date" style="font-size: 0.875rem; margin: 0.25rem 0;">
                          <%= new Date(order.createdAt).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit'
                          }) %>
                        </p>
                      </div>
                      <div class="order-total-badge" style="background: linear-gradient(135deg, #10B981 0%, #059669 100%); color: white; padding: 0.75rem 1.25rem; border-radius: 3rem; font-size: 1.25rem; font-weight: 700; box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);">
                        $<%= parseFloat(order.total).toFixed(2) %>
                      </div>
                    </div>

                    <!-- Customer Contact Info -->
                    <div class="order-customer-details">
                      <p><strong>ğŸ“§ Email:</strong> <%= order.email %></p>
                      <% if (order.contact) { %>
                        <p><strong>ğŸ“ Contact:</strong> <%= order.contact %></p>
                      <% } %>
                      <% if (order.address) { %>
                        <p><strong>ğŸ“ Address:</strong> <%= order.address %></p>
                      <% } %>
                    </div>

                    <!-- Order Items -->
                    <div class="order-items-list" style="margin-top: 1rem;">
                      <h6 class="order-items-title" style="font-weight: 700; margin-bottom: 0.75rem; color: var(--primary-blue);">
                        ğŸ“¦ Items Ordered:
                      </h6>
                      <ul class="order-items" style="list-style: none; padding: 0; margin: 0;">
                        <% order.items.forEach(function(item) { %>
                          <li class="order-item" style="background: var(--pale-blue); padding: 0.75rem; margin-bottom: 0.5rem; border-radius: 0.75rem; display: flex; justify-content: space-between; align-items: center;">
                            <span class="order-item-name" style="font-weight: 600; flex: 1;"><%= item.productName %></span>
                            <span class="order-item-details" style="font-size: 0.875rem; text-align: right;">
                              <%= item.quantity %> Ã— $<%= parseFloat(item.price).toFixed(2) %>
                              = <strong style="color: var(--primary-green);">$<%= (parseFloat(item.price) * parseInt(item.quantity)).toFixed(2) %></strong>
                            </span>
                          </li>
                        <% }); %>
                      </ul>
                    </div>

                    <!-- Order Actions -->
                    <div class="order-card-actions" style="margin-top: 1.5rem; padding-top: 1rem; border-top: 1px solid var(--border-color);">
                      <a href="/admin/invoice/<%= order.orderId %>" class="btn btn-primary w-100">
                        ğŸ“„ View Full Invoice
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>
