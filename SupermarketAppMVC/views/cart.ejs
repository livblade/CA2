<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/chatbot.css">
  <title>Shopping Cart - Ethan's Grains</title>
</head>
<body>
  <!-- Navigation bar -->
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <!-- Dark mode toggle button -->
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hidden flash messages -->
  <script id="flash-messages" type="application/json">
    {
      "success": <%- JSON.stringify(messages || []) %>,
      "errors": <%- JSON.stringify(errors || []) %>,
      "info": <%- JSON.stringify(info || []) %>
    }
  </script>

  <div class="container mt-4">
    <!-- Page header -->
    <div class="page-header">
      <h2>üõí Shopping Cart</h2>
    </div>

    <!-- Toast container will be inserted here by JavaScript -->

    <!-- Check if cart is empty -->
    <% if (!cart || cart.length === 0) { %>
      <!-- Empty cart state -->
      <div class="empty-state">
        <div class="empty-state-icon">üõí</div>
        <h3>Your cart is empty</h3>
        <p>Start shopping to add items to your cart</p>
        <a href="/shopping" class="btn btn-success btn-lg">Start Shopping</a>
      </div>
    <% } else { %>
      <div class="row g-4">
        <!-- Cart Items Column -->
        <div class="col-lg-8">
          <div class="cart-items-container">
            <h3 class="cart-section-title">
              <span>üì¶ Cart Items</span>
              <span class="cart-item-count"><%= cart.length %> <%= cart.length === 1 ? 'item' : 'items' %></span>
            </h3>
            
            <% cart.forEach(function(item) { %>
              <div class="cart-item-card">
                <div class="cart-item-content">
                  <!-- Product Image -->
                  <div class="cart-item-image">
                    <% if (item.image) { %>
                      <img src="/images/<%= item.image %>" alt="<%= item.productName %>" class="img-fluid">
                    <% } else { %>
                      <div class="product-card-no-image">üì¶</div>
                    <% } %>
                  </div>

                  <!-- Product Details -->
                  <div class="cart-item-details">
                    <h5 class="cart-item-name"><%= item.productName %></h5>
                    <p class="cart-item-price">
                      <span class="price-label">Price:</span>
                      <span class="price-value">$<%= (parseFloat(item.price) || 0).toFixed(2) %></span>
                      <span class="price-unit">each</span>
                    </p>
                    
                    <!-- Quantity selector with better styling -->
                    <div class="cart-item-quantity-section">
                      <form method="post" action="/cart/update" class="cart-item-quantity-form">
                        <input type="hidden" name="productId" value="<%= item.productId %>">
                        <label for="qty-<%= item.productId %>" class="filter-label">Quantity:</label>
                        <div class="quantity-selector">
                          <select name="quantity" id="qty-<%= item.productId %>" class="form-select qty-select" 
                                  onchange="this.form.submit()">
                            <% 
                              const currentQty = parseInt(item.quantity,10) || 0;
                              const maxOption = Math.min(Math.max(10, currentQty), 50);
                              for (let q = 1; q <= maxOption; q++) { 
                            %>
                              <option value="<%= q %>" <%= (currentQty === q) ? 'selected' : '' %>><%= q %></option>
                            <% } %>
                            <% if (currentQty > maxOption) { %>
                              <option value="<%= currentQty %>" selected><%= currentQty %></option>
                            <% } %>
                          </select>
                        </div>
                      </form>
                    </div>
                  </div>

                  <!-- Line Total and Actions -->
                  <div class="cart-item-actions">
                    <div class="cart-item-total">
                      <span class="cart-item-total-label">Subtotal</span>
                      <span class="cart-item-total-value">$<%= ((parseFloat(item.price) || 0) * (parseInt(item.quantity,10) || 0)).toFixed(2) %></span>
                    </div>
                    <form method="post" action="/cart/remove/<%= item.productId %>">
                      <button type="submit" class="btn btn-danger btn-sm btn-remove" 
                              onclick="return confirm('Remove <%= item.productName %> from cart?')">
                        <span>üóëÔ∏è</span> Remove
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>

        <!-- Cart Summary Column -->
        <div class="col-lg-4">
          <div class="cart-summary-sticky">
            <div class="cart-summary">
              <h3 class="cart-summary-title">üí≥ Order Summary</h3>
              
              <!-- Summary Details -->
              <div class="cart-summary-details">
                <div class="summary-row">
                  <span class="summary-label">Items (<%= cart.length %>):</span>
                  <span class="summary-value">$<%= (typeof total !== 'undefined' ? total.toFixed(2) : (cart.reduce((s,i)=> s + ((parseFloat(i.price)||0)*(parseInt(i.quantity,10)||0)),0)).toFixed(2)) %></span>
                </div>
                <div class="summary-row">
                  <span class="summary-label">Shipping:</span>
                  <span class="summary-value text-success">FREE</span>
                </div>
                <div class="summary-row">
                  <span class="summary-label">Tax:</span>
                  <span class="summary-value">$0.00</span>
                </div>
                <div class="summary-divider"></div>
                <div class="summary-row summary-total">
                  <span class="summary-label">Total:</span>
                  <span class="cart-total">$<%= (typeof total !== 'undefined' ? total.toFixed(2) : (cart.reduce((s,i)=> s + ((parseFloat(i.price)||0)*(parseInt(i.quantity,10)||0)),0)).toFixed(2)) %></span>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="cart-summary-actions">
                <form method="post" action="/checkout" style="width: 100%;">
                  <button type="submit" class="btn btn-success btn-lg w-100 checkout-btn">
                    ‚úÖ Proceed to Checkout
                  </button>
                </form>
                <a href="/shopping" class="btn btn-primary w-100">
                  ‚Üê Continue Shopping
                </a>
                <form method="post" action="/cart/clear" style="width: 100%;">
                  <button type="submit" class="btn btn-outline-danger w-100" 
                          onclick="return confirm('Clear entire cart?')">
                    üóëÔ∏è Clear Cart
                  </button>
                </form>
              </div>

              <!-- Security Badge -->
              <div class="cart-security-badge">
                <span class="security-icon">üîí</span>
                <span class="security-text">Secure Checkout</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/toast.js"></script>
  <script src="/js/theme.js"></script>
  <script src="/js/chatbot.js"></script>
</body>
</html>
