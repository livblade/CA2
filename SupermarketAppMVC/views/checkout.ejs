<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>Checkout - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="page-header">
      <h2>üõí Checkout</h2>
    </div>

    <% if (!cart || cart.length === 0) { %>
      <div class="empty-state">
        <div class="empty-state-icon">üõí</div>
        <h3>Your cart is empty</h3>
        <p>Add items to your cart before checking out</p>
        <a href="/shopping" class="btn btn-success">Start Shopping</a>
      </div>
    <% } else { %>
      <div class="row g-4">
        <!-- Order Summary -->
        <div class="col-lg-8">
          <div class="checkout-card">
            <h3 class="checkout-section-title">üì¶ Order Summary</h3>
            
            <div class="checkout-items">
              <% cart.forEach(function(item) { %>
                <div class="checkout-item">
                  <div class="checkout-item-image">
                    <% if (item.image) { %>
                      <img src="/images/<%= item.image %>" alt="<%= item.productName %>">
                    <% } else { %>
                      <div class="product-card-no-image">No Image</div>
                    <% } %>
                  </div>
                  <div class="checkout-item-details">
                    <h5 class="checkout-item-name"><%= item.productName %></h5>
                    <p class="checkout-item-price">$<%= (parseFloat(item.price) || 0).toFixed(2) %> √ó <%= item.quantity %></p>
                  </div>
                  <div class="checkout-item-total">
                    $<%= ((parseFloat(item.price) || 0) * (parseInt(item.quantity,10) || 0)).toFixed(2) %>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>

          <!-- Delivery Information -->
          <div class="checkout-card">
            <h3 class="checkout-section-title">üìç Delivery Information</h3>
            <div class="delivery-info">
              <div class="delivery-info-item">
                <span class="delivery-label">Name:</span>
                <span class="delivery-value"><%= user.username %></span>
              </div>
              <div class="delivery-info-item">
                <span class="delivery-label">Email:</span>
                <span class="delivery-value"><%= user.email %></span>
              </div>
              <% if (user.address) { %>
                <div class="delivery-info-item">
                  <span class="delivery-label">Address:</span>
                  <span class="delivery-value"><%= user.address %></span>
                </div>
              <% } %>
              <% if (user.contact) { %>
                <div class="delivery-info-item">
                  <span class="delivery-label">Contact:</span>
                  <span class="delivery-value"><%= user.contact %></span>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Payment Summary -->
        <div class="col-lg-4">
          <div class="checkout-card checkout-summary-sticky">
            <h3 class="checkout-section-title">üí≥ Payment Summary</h3>
            
            <div class="checkout-totals">
              <div class="checkout-total-row">
                <span>Subtotal:</span>
                <span>$<%= total.toFixed(2) %></span>
              </div>
              <div class="checkout-total-row">
                <span>Shipping:</span>
                <span class="text-success">FREE</span>
              </div>
              <div class="checkout-total-row">
                <span>Tax:</span>
                <span>$0.00</span>
              </div>
              <div class="checkout-total-row checkout-grand-total">
                <span>Total:</span>
                <span>$<%= total.toFixed(2) %></span>
              </div>
            </div>

            <div class="checkout-actions">
              <form method="post" action="/checkout">
                <button type="submit" class="btn btn-success btn-lg w-100">
                  ‚úÖ Place Order
                </button>
              </form>
              <a href="/cart" class="btn btn-outline-primary w-100 mt-2">
                ‚Üê Back to Cart
              </a>
            </div>

            <div class="checkout-security">
              <p>üîí Secure Checkout</p>
              <small>Your information is protected</small>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>
