<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>Admin Dashboard - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">ğŸª</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="welcome-box">
      <p>Welcome, Admin <strong><%= user.username %></strong>!</p>
    </div>

    <div class="page-header">
      <h2>ğŸ“Š Admin Dashboard</h2>
    </div>

    <!-- Dashboard Stats Grid -->
    <div class="row g-4 mb-4">
      <!-- Total Products Card -->
      <div class="col-md-6 col-lg-3">
        <div class="dashboard-stat-card stat-primary">
          <div class="stat-icon">ğŸ“¦</div>
          <div class="stat-content">
            <h3 class="stat-number"><%= stats.totalProducts %></h3>
            <p class="stat-label">Total Products</p>
          </div>
        </div>
      </div>

      <!-- Low Stock Card -->
      <div class="col-md-6 col-lg-3">
        <div class="dashboard-stat-card stat-warning">
          <div class="stat-icon">âš ï¸</div>
          <div class="stat-content">
            <h3 class="stat-number"><%= stats.lowStockCount %></h3>
            <p class="stat-label">Low Stock Items</p>
          </div>
        </div>
      </div>

      <!-- Total Users Card -->
      <div class="col-md-6 col-lg-3">
        <div class="dashboard-stat-card stat-success">
          <div class="stat-icon">ğŸ‘¥</div>
          <div class="stat-content">
            <h3 class="stat-number"><%= stats.totalUsers %></h3>
            <p class="stat-label">Total Users</p>
          </div>
        </div>
      </div>

      <!-- Admin Count Card -->
      <div class="col-md-6 col-lg-3">
        <div class="dashboard-stat-card stat-info">
          <div class="stat-icon">ğŸ‘‘</div>
          <div class="stat-content">
            <h3 class="stat-number"><%= stats.adminCount %></h3>
            <p class="stat-label">Administrators</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Management Cards -->
    <div class="row g-4 mb-4">
      <!-- Inventory Management Card -->
      <div class="col-md-6">
        <div class="dashboard-card">
          <div class="dashboard-card-header">
            <div class="dashboard-card-icon">ğŸ“¦</div>
            <h3>Inventory Management</h3>
          </div>
          <p class="dashboard-card-description">
            Manage products, update stock levels, add new items, and monitor inventory status.
          </p>
          <div class="dashboard-stats-badges">
            <span class="stat-badge">Products: <strong><%= stats.totalProducts %></strong></span>
            <% if (stats.lowStockCount > 0) { %>
              <span class="stat-badge stat-badge-warning">Low Stock: <strong><%= stats.lowStockCount %></strong></span>
            <% } %>
          </div>
          <a href="/inventory" class="btn btn-primary mt-3">Manage Inventory â†’</a>
        </div>
      </div>

      <!-- User Management Card -->
      <div class="col-md-6">
        <div class="dashboard-card">
          <div class="dashboard-card-header">
            <div class="dashboard-card-icon">ğŸ‘¥</div>
            <h3>User Management</h3>
          </div>
          <p class="dashboard-card-description">
            View, edit, and manage user accounts. Monitor user activity and maintain system security.
          </p>
          <div class="dashboard-stats-badges">
            <span class="stat-badge">Users: <strong><%= stats.totalUsers %></strong></span>
            <span class="stat-badge stat-badge-success">Admins: <strong><%= stats.adminCount %></strong></span>
          </div>
          <a href="/users" class="btn btn-success mt-3">Manage Users â†’</a>
        </div>
      </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="dashboard-section-header">
      <h3>âš¡ Quick Actions</h3>
    </div>
    <div class="row g-4 mb-4">
      <div class="col-md-4">
        <a href="/addProduct" class="quick-action-card">
          <div class="quick-action-icon">â•</div>
          <div class="quick-action-content">
            <h4>Add Product</h4>
            <p>Add new items to your inventory catalog</p>
          </div>
        </a>
      </div>
      <div class="col-md-4">
        <a href="/register" class="quick-action-card">
          <div class="quick-action-icon">ğŸ‘¨â€ğŸ’¼</div>
          <div class="quick-action-content">
            <h4>Add User</h4>
            <p>Create new user or admin account</p>
          </div>
        </a>
      </div>
      <div class="col-md-4">
        <a href="/admin/orders" class="quick-action-card">
          <div class="quick-action-icon">ğŸ“‹</div>
          <div class="quick-action-content">
            <h4>View Orders</h4>
            <p>Check all customer orders and invoices</p>
          </div>
        </a>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>
