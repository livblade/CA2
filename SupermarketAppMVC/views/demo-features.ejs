  <script>
    // Initialize demo
    function updateDemo() {
      const amount = parseFloat(document.getElementById('demo-amount').value) || 150;
      
      // Initialize currency selector
      initCurrencySelector('currency-demo', amount);
      
      // Initialize BNPL calculator
      initBNPL('bnpl-demo', amount, 'SGD');
    }

    // Run on page load
    window.addEventListener('load', updateDemo);
