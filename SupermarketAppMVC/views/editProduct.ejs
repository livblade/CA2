<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>Edit Product - Ethan's Grains</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-custom">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <span class="brand-icon">üè™</span> Ethan's Grains
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="/inventory">Inventory</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/addProduct">Add Product</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              <li class="nav-item">
                <button id="theme-toggle" class="theme-toggle nav-link">üåô Dark Mode</button>
              </li>
            </ul>
          </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="page-header">
            <h2>‚úèÔ∏è Update Product</h2>
        </div>
        
        <% if (product) { %> 
            <div class="admin-form-container">
                <div class="admin-form-header">
                    <h2>Edit Product Information</h2>
                </div>

                <form action="/updateProduct/<%= product.id %>" method="POST" enctype="multipart/form-data">
                    
                    <!-- Basic Information Section -->
                    <div class="admin-form-section">
                        <h3 class="admin-form-section-title">üìù Basic Information</h3>
                        
                        <div class="mb-3">
                            <label for="name" class="filter-label">Product Name *</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= product.productName %>" required>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="category" class="filter-label">Category *</label>
                                <select class="form-select" id="category" name="category" required>
                                    <option value="">Select category...</option>
                                    <option value="Fruit" <%= (product.category === 'Fruit') ? 'selected' : '' %>>üçé Fruit</option>
                                    <option value="Vegetable" <%= (product.category === 'Vegetable') ? 'selected' : '' %>>ü•¶ Vegetable</option>
                                    <option value="Meat" <%= (product.category === 'Meat') ? 'selected' : '' %>>ü•© Meat</option>
                                    <option value="Dairy" <%= (product.category === 'Dairy') ? 'selected' : '' %>>ü•õ Dairy</option>
                                    <option value="Bakery" <%= (product.category === 'Bakery') ? 'selected' : '' %>>üçû Bakery</option>
                                    <option value="Other" <%= (product.category === 'Other') ? 'selected' : '' %>>üì¶ Other</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="price" class="filter-label">Price ($) *</label>
                                <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" value="<%= product.price %>" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="filter-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="3"><%= product.description || '' %></textarea>
                        </div>
                    </div>

                    <!-- Inventory Section -->
                    <div class="admin-form-section">
                        <h3 class="admin-form-section-title">üìä Inventory</h3>
                        
                        <div class="mb-3">
                            <label for="quantity" class="filter-label">Stock Quantity *</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" min="0" step="1" value="<%= product.quantity %>" required>
                        </div>
                    </div>

                    <!-- Product Image Section -->
                    <div class="admin-form-section">
                        <h3 class="admin-form-section-title">üñºÔ∏è Product Image</h3>
                        
                        <div class="mb-3">
                            <label class="filter-label">Current Image</label>
                            <input type="hidden" name="currentImage" value="<%= product.image %>">
                            <div class="image-preview-container">
                                <img src="/images/<%= product.image %>" alt="<%= product.productName %>">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="image" class="filter-label">Upload New Image (Optional)</label>
                            <input class="form-control" type="file" id="image" name="image" accept="image/*">
                            <small class="text-muted">Leave empty to keep current image</small>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="admin-form-actions">
                        <button type="submit" class="btn btn-primary">
                            üíæ Update Product
                        </button>
                        <a href="/inventory" class="btn btn-outline-secondary">
                            ‚ùå Cancel
                        </a>
                    </div>
                </form>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-state-icon">‚ùå</div>
                <h3>Product not found</h3>
                <p>The product you're looking for doesn't exist</p>
                <a href="/inventory" class="btn btn-primary">‚Üê Back to Inventory</a>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/theme.js"></script>
</body>
</html>
