<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>Inventory - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add Product</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <!-- Dark mode toggle button -->
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hidden flash messages -->
  <script id="flash-messages" type="application/json">
    {
      "success": <%- JSON.stringify(messages || []) %>,
      "errors": <%- JSON.stringify(errors || []) %>,
      "info": <%- JSON.stringify(info || []) %>
    }
  </script>

  <div class="container mt-4">
    <div class="welcome-box">
      <p>Admin: <strong><%= user.username %></strong>!</p>
    </div>

    <!-- Low Stock Alert Banner -->
    <%
      const lowStockItems = products.filter(p => parseInt(p.quantity, 10) < 5);
    %>
    <% if (lowStockItems.length > 0) { %>
      <div class="low-stock-alert">
        <div class="low-stock-alert-icon">‚ö†Ô∏è</div>
        <div>
          <h4>Low Stock Alert!</h4>
          <p><strong><%= lowStockItems.length %></strong> product(s) running low on inventory (less than 5 units).</p>
        </div>
      </div>
    <% } %>

    <div class="page-header">
      <h2>Inventory Management</h2>
    </div>

    <!-- Toast container will be inserted here by JavaScript -->

    <!-- Search and Filter Section -->
    <div class="search-filter-section">
      <form method="get" action="/inventory" class="mb-3">
        <div class="input-group">
          <input class="form-control" type="search" name="q" placeholder="Search inventory..." 
                 value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
          <button class="btn btn-primary" type="submit">Search</button>
          <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
            <a href="/inventory" class="btn btn-outline-primary">Clear</a>
          <% } %>
        </div>
      </form>

      <form method="get" action="/inventory">
        <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
          <input type="hidden" name="q" value="<%= searchQuery %>">
        <% } %>
        <div class="row g-3">
          <div class="col-md-3">
            <label class="filter-label">Category</label>
            <select name="category" class="form-select">
              <option value="">All Categories</option>
              <option value="Fruit" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Fruit') ? 'selected' : '' %>>Fruit</option>
              <option value="Vegetable" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Vegetable') ? 'selected' : '' %>>Vegetable</option>
              <option value="Meat" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Meat') ? 'selected' : '' %>>Meat</option>
              <option value="Dairy" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Dairy') ? 'selected' : '' %>>Dairy</option>
              <option value="Bakery" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Bakery') ? 'selected' : '' %>>Bakery</option>
              <option value="Other" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Other') ? 'selected' : '' %>>Other</option>
            </select>
          </div>
          <div class="col-md-2">
            <label class="filter-label">Min Price</label>
            <input type="number" name="minPrice" class="form-control" placeholder="$0.00" step="0.01" min="0"
                   value="<%= typeof minPrice !== 'undefined' ? minPrice : '' %>">
          </div>
          <div class="col-md-2">
            <label class="filter-label">Max Price</label>
            <input type="number" name="maxPrice" class="form-control" placeholder="$99.99" step="0.01" min="0"
                   value="<%= typeof maxPrice !== 'undefined' ? maxPrice : '' %>">
          </div>
          <div class="col-md-3">
            <label class="filter-label">Sort by Price</label>
            <select name="sort" class="form-select">
              <option value="">Default</option>
              <option value="price_asc" <%= (typeof selectedSort !== 'undefined' && selectedSort === 'price_asc') ? 'selected' : '' %>>Low to High</option>
              <option value="price_desc" <%= (typeof selectedSort !== 'undefined' && selectedSort === 'price_desc') ? 'selected' : '' %>>High to Low</option>
            </select>
          </div>
          <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">Apply</button>
          </div>
        </div>
      </form>
    </div>

    <!-- Products Grid - Card Layout for Inventory -->
    <div class="row g-4">
      <% for(let i=0; i < products.length; i++) { %>
        <%
          const qty = parseInt(products[i].quantity, 10);
          const isOutOfStock = qty === 0;
          const isLowStock = !isOutOfStock && qty < 5;
        %>
        <div class="col-12 col-sm-6 col-md-4 col-xl-3">
          <div class="product-card admin-product-card <%= isLowStock ? 'product-card-low-stock' : '' %>">
            <!-- Product Image -->
            <div class="product-card-image">
              <img src="images/<%= products[i].image %>" alt="<%= products[i].productName %>" class="img-fluid">
              
              <!-- Visibility Badge -->
              <span class="product-badge <%= products[i].visible ? 'badge-visible' : 'badge-hidden' %>">
                <%= products[i].visible ? 'üëÅÔ∏è Visible' : 'üö´ Hidden' %>
              </span>
              
              <!-- Stock Badge -->
              <% if (isOutOfStock) { %>
                <span class="product-badge badge-out-of-stock">Out of Stock</span>
              <% } else if (isLowStock) { %>
                <span class="product-badge badge-low-stock">Low Stock</span>
              <% } %>
            </div>

            <!-- Product Info -->
            <div class="product-card-body">
              <span class="category-badge"><%= products[i].category || 'N/A' %></span>
              
              <h5 class="product-card-title">
                <a href="/product/<%= products[i].id %>"><%= products[i].productName %></a>
              </h5>
              
              <% if (products[i].description) { %>
                <p class="product-card-description">
                  <%= products[i].description.length > 50 ? products[i].description.substring(0,50) + '...' : products[i].description %>
                </p>
              <% } %>
              
              <!-- Admin Info Grid -->
              <div class="admin-info-grid">
                <div class="admin-info-item">
                  <span class="admin-info-label">Price</span>
                  <span class="admin-info-value">$<%= products[i].price.toFixed(2) %></span>
                </div>
                <div class="admin-info-item">
                  <span class="admin-info-label">Stock</span>
                  <span class="admin-info-value"><%= products[i].quantity %></span>
                </div>
              </div>

              <!-- Admin Actions -->
              <div class="admin-actions">
                <!-- Visibility Toggle -->
                <form method="POST" action="/toggleVisibility/<%= products[i].id %>" class="d-inline">
                  <input type="hidden" name="visible" value="<%= products[i].visible ? '0' : '1' %>">
                  <button type="submit" 
                          class="btn btn-sm <%= products[i].visible ? 'btn-outline-primary' : 'btn-outline-secondary' %>" 
                          title="<%= products[i].visible ? 'Hide' : 'Show' %> from customers">
                    <%= products[i].visible ? 'üëÅÔ∏è' : 'üö´' %>
                  </button>
                </form>
                
                <!-- Edit Button -->
                <a href="/updateProduct/<%= products[i].id %>" class="btn btn-primary btn-sm" title="Edit">
                  ‚úèÔ∏è Edit
                </a>
                
                <!-- Delete Button -->
                <a href="/deleteProduct/<%= products[i].id %>" 
                   class="btn btn-danger btn-sm" 
                   onclick="return confirm('Delete this product?')"
                   title="Delete">
                  üóëÔ∏è Delete
                </a>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Empty State -->
    <% if (products.length === 0) { %>
      <div class="empty-state">
        <div class="empty-state-icon">üì¶</div>
        <h3>No products in inventory</h3>
        <p>Start by adding your first product</p>
        <a href="/addProduct" class="btn btn-success">Add Product</a>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/toast.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>
