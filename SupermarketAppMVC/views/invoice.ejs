<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>Invoice - Ethan's Grains</title>
  <style>
    @media print {
      .no-print { display: none; }
      body { background: white; }
    }
  </style>
</head>
<body>
  <!-- Navigation bar -->
  <nav class="navbar navbar-expand-sm navbar-custom no-print">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <% if (order) { %>
      <!-- Invoice Container -->
      <div class="invoice-container">
        <!-- Invoice Header -->
        <div class="invoice-header">
          <h1 class="invoice-title">üè™ Ethan's Grains</h1>
          <p class="invoice-subtitle">The Big Cool and Amazing Online Supermarket</p>
        </div>

        <!-- Invoice Details -->
        <div class="invoice-details">
          <div class="invoice-details-row">
            <div>
              <h3 class="invoice-section-title">Invoice</h3>
              <p class="invoice-info-line"><strong>Order ID:</strong> #<%= order.orderId %></p>
              <p class="invoice-info-line"><strong>Date:</strong> 
                <%= new Date(order.createdAt).toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric',
                  hour: '2-digit',
                  minute: '2-digit'
                }) %>
              </p>
            </div>
            <div class="invoice-customer-info">
              <p class="invoice-info-line"><strong>Customer:</strong> <%= user.username %></p>
              <p class="invoice-info-line"><strong>Email:</strong> <%= user.email %></p>
              <% if (user.address) { %>
                <p class="invoice-info-line"><strong>Address:</strong> <%= user.address %></p>
              <% } %>
              <% if (user.contact) { %>
                <p class="invoice-info-line"><strong>Contact:</strong> <%= user.contact %></p>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Items Table -->
        <div class="invoice-table-wrapper">
          <table class="invoice-table">
            <thead>
              <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <% 
                let subtotal = 0;
                order.items.forEach(function(item) { 
                  const itemTotal = parseFloat(item.price) * parseInt(item.quantity);
                  subtotal += itemTotal;
              %>
                <tr>
                  <td><%= item.productName %></td>
                  <td><%= item.quantity %></td>
                  <td>$<%= parseFloat(item.price).toFixed(2) %></td>
                  <td><strong>$<%= itemTotal.toFixed(2) %></strong></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <!-- Total Section -->
        <div class="invoice-totals">
          <div class="invoice-totals-content">
            <div class="invoice-total-row">
              <span>Subtotal:</span>
              <span class="invoice-total-value">$<%= subtotal.toFixed(2) %></span>
            </div>
            <div class="invoice-total-row invoice-total-row-border">
              <span>Tax (0%):</span>
              <span class="invoice-total-value">$0.00</span>
            </div>
            <div class="invoice-grand-total">
              <span>Grand Total:</span>
              <span class="invoice-grand-total-amount">$<%= parseFloat(order.total).toFixed(2) %></span>
            </div>
          </div>
        </div>

        <!-- Payment Status -->
        <div class="invoice-status">
          <p>‚úì Order Confirmed - Payment Received</p>
        </div>

        <!-- Action Buttons -->
        <div class="invoice-actions no-print">
          <button onclick="window.print()" class="btn btn-primary">üñ®Ô∏è Print Invoice</button>
          <a href="/orders" class="btn btn-success">‚Üê Back to Orders</a>
        </div>

        <!-- Thank You Message -->
        <div class="invoice-footer">
          <p>Thank you for shopping with Ethan's Grains!</p>
        </div>
      </div>
    <% } else { %>
      <div class="empty-state">
        <div class="empty-state-icon">üìÑ</div>
        <h3>Invoice not found</h3>
        <p>The requested invoice could not be found.</p>
        <a href="/orders" class="btn btn-primary mt-3">Back to Orders</a>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>