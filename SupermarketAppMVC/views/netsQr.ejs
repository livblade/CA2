<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title><%= title %> - Ethan's Grains</title>
    <script src="https://unpkg.com/event-source-polyfill"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <span class="brand-icon">üè™</span> Ethan's Grains
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/shopping">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/orders">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                    <li class="nav-item">
                        <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="checkout-card text-center">
                    <h2 class="mb-4">üì± Pay with NETS QR</h2>

                    <div class="qr-code-container mb-4">
                        <img src="<%= qrCodeUrl %>" alt="NETS QR Code" class="qr-code-image" />
                    </div>

                    <div class="payment-status mb-4">
                        <h5 id="status" class="text-primary">Scan with your NETS app to complete payment</h5>
                        <div class="timer-display">
                            <i class="fas fa-clock"></i>
                            <span id="timer" class="timer-text">Time remaining: 5:00</span>
                        </div>
                    </div>

                    <div class="payment-info mb-4">
                        <img height="auto" width="60%" src="./images/netsQrInfo.png" alt="NETS QR Info" class="nets-info-image" />
                    </div>

                    <div class="payment-actions">
                        <a href="/cart" class="btn btn-outline-secondary me-2">
                            ‚Üê Back to Cart
                        </a>
                        <a href="/payment-options" class="btn btn-outline-primary">
                            Change Payment Method
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/theme.js"></script>
    <script>
        let s2sNetsTxnStatus;

        if (s2sNetsTxnStatus) {
            s2sNetsTxnStatus.close();
        }

        const txnRetrievalRef = "<%= txnRetrievalRef %>";
        const courseInitId = "<%= courseInitId %>";
        const url = `/sse/payment-status/${txnRetrievalRef}`;

        const headers = {
            "api-key": "<%= apiKey %>",
            "project-id": "<%= projectId %>",
        };

        console.log("NETS REQUEST response:", <%- JSON.stringify(fullNetsResponse) %>);

        s2sNetsTxnStatus = new EventSourcePolyfill(url, {
            headers: headers,
            heartbeatTimeout: 150000,
        });

        s2sNetsTxnStatus.addEventListener("message", (event) => {
            const data = JSON.parse(event.data);
            console.log("NETS Query Response:", data);

            if (data.success) {
                if (s2sNetsTxnStatus) s2sNetsTxnStatus.close();
                window.location.href = `/nets-payment-success`;
            } else if (data.fail) {
                if (s2sNetsTxnStatus) s2sNetsTxnStatus.close();
                window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
            }
        });

        console.log("Initialized EventSourcePolyfill");

        // Enhanced Countdown Timer Logic
        const timerElement = document.getElementById("timer");
        const statusElement = document.getElementById("status");
        const countdownDuration = 300;
        let remainingTime = countdownDuration;

        const updateTimer = () => {
            const minutes = Math.floor(remainingTime / 60);
            const seconds = remainingTime % 60;
            timerElement.textContent = `Time remaining: ${minutes}:${seconds.toString().padStart(2, "0")}`;

            // Change color based on time remaining
            if (remainingTime <= 60) {
                timerElement.style.color = '#dc3545'; // Red for last minute
            } else if (remainingTime <= 120) {
                timerElement.style.color = '#fd7e14'; // Orange for last 2 minutes
            }

            remainingTime--;

            if (remainingTime < 0) {
                clearInterval(timerInterval);
                timerElement.textContent = "Transaction timed out.";
                statusElement.textContent = "Payment session expired. Please try again.";
                statusElement.className = "text-danger";

                if (s2sNetsTxnStatus) {
                    s2sNetsTxnStatus.close();
                }

                // Show retry options after timeout
                setTimeout(() => {
                    window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
                }, 2000);
            }
        };

        const timerInterval = setInterval(updateTimer, 1000);
        updateTimer();
    </script>
</body>
</html>