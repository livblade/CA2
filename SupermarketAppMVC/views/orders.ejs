<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>Order History - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="welcome-box">
      <p>Welcome, <strong><%= user.username %></strong>!</p>
    </div>

    <div class="page-header">
      <h2>Order History</h2>
    </div>

    <% if (!orders || orders.length === 0) { %>
      <div class="empty-state">
        <div class="empty-state-icon">üì¶</div>
        <h3>No orders yet</h3>
        <p>You haven't placed any orders yet.</p>
        <a href="/shopping" class="btn btn-success">Start Shopping</a>
      </div>
    <% } else { %>
      <div class="row g-4">
        <% orders.forEach(function(order) { %>
          <div class="col-12 col-md-6">
            <div class="product-card order-card">
              <div class="product-card-body">
                <!-- Order Header -->
                <div class="order-card-header">
                  <div>
                    <h5 class="order-id">Order #<%= order.orderId %></h5>
                    <p class="order-date">
                      <%= new Date(order.createdAt).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                      }) %>
                    </p>
                  </div>
                  <div class="order-total-badge">
                    $<%= parseFloat(order.total).toFixed(2) %>
                  </div>
                </div>

                <!-- Order Items -->
                <div class="order-items-list">
                  <h6 class="order-items-title">Items Ordered:</h6>
                  <ul class="order-items">
                    <% order.items.forEach(function(item) { %>
                      <li class="order-item">
                        <span class="order-item-name"><%= item.productName %></span>
                        <span class="order-item-details">
                          Qty: <%= item.quantity %> √ó $<%= parseFloat(item.price).toFixed(2) %>
                          = <strong>$<%= (parseFloat(item.price) * parseInt(item.quantity)).toFixed(2) %></strong>
                        </span>
                      </li>
                    <% }); %>
                  </ul>
                </div>

                <!-- Order Actions -->
                <div class="order-card-actions">
                  <a href="/invoice/<%= order.orderId %>" class="btn btn-primary btn-sm">
                    üìÑ View Invoice
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>