<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>Payment Options - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="page-header">
      <h2>üí≥ Choose Payment Method</h2>
      <p class="text-muted">Select your preferred payment option to complete your order</p>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-8">
        <!-- Currency Display -->
        <% 
          const displayCurrency = locals.currency || 'SGD';
          const currencySymbols = { 'SGD': 'S$', 'USD': '$', 'EUR': '‚Ç¨', 'GBP': '¬£', 'JPY': '¬•', 'AUD': 'A$', 'CNY': '¬•', 'MYR': 'RM', 'THB': '‡∏ø', 'KRW': '‚Ç©' };
          const currencySymbol = currencySymbols[displayCurrency] || displayCurrency + ' ';
        %>
        
        <!-- Order Summary -->
        <div class="checkout-card mb-4">
          <h3 class="checkout-section-title">üì¶ Order Summary</h3>
          
          <!-- Currency Info -->
          <% if (displayCurrency !== 'SGD') { %>
          <div class="alert alert-info mb-3">
            <strong>üí± Display Currency:</strong> <%= displayCurrency %> 
            <br>
            <small class="text-muted">You will be charged: <strong>S$<%= total.toFixed(2) %> SGD</strong></small>
          </div>
          <% } %>
          
          <!-- BNPL Selection Display -->
          <% if (locals.bnplMonths && locals.bnplMonths !== 'none') { %>
          <div class="alert alert-warning mb-3">
            <strong>üí≥ Payment Plan Selected:</strong> <%= bnplMonths %>-month installment
            <br>
            <small><%= currencySymbol %><%= (total / parseInt(bnplMonths)).toFixed(2) %>/month √ó <%= bnplMonths %> months</small>
            <br>
            <small class="text-muted"><strong>Note:</strong> Full amount (<strong>S$<%= total.toFixed(2) %> SGD</strong>) will be charged now. This is a simulator showing how the cost breaks down.</small>
          </div>
          <% } %>
          
          <div class="checkout-total-row checkout-grand-total">
            <span>Amount to Pay Now:</span>
            <span><strong>S$<%= total.toFixed(2) %> SGD</strong></span>
          </div>
          <% if (displayCurrency !== 'SGD') { %>
          <div class="checkout-total-row">
            <span><small>Equivalent in <%= displayCurrency %>:</small></span>
            <span><small><%= currencySymbol %><%= total.toFixed(2) %></small></span>
          </div>
          <% } %>
        </div>

        <!-- Payment Options -->
        <div class="payment-options-grid">
          <!-- NETS QR -->
          <div class="payment-option-card">
            <div class="payment-option-header">
              <div class="payment-icon">üì±</div>
              <h4>NETS QR</h4>
            </div>
            <p>Scan QR code with NETS app for instant payment</p>
            <form method="post" action="/generateNETSQR">
              <input type="hidden" name="cartTotal" value="<%= total.toFixed(2) %>">
              <input type="hidden" name="currency" value="<%= displayCurrency %>">
              <input type="hidden" name="bnplMonths" value="<%= locals.bnplMonths || '' %>">
              <button type="submit" class="btn btn-primary btn-lg w-100">
                Pay with NETS QR
              </button>
            </form>
          </div>

          <!-- PayPal -->
          <div class="payment-option-card">
            <div class="payment-option-header">
              <div class="payment-icon">üÖøÔ∏è</div>
              <h4>PayPal</h4>
            </div>
            <p>Pay securely with your PayPal account</p>
            <% if (paypalConfigured) { %>
              <div id="paypal-button-container"></div>
            <% } else { %>
              <button type="button" class="btn btn-secondary btn-lg w-100" disabled>
                PayPal Not Configured
              </button>
              <small class="text-muted mt-2 d-block">Configure PayPal API keys to enable this payment method</small>
            <% } %>
          </div>

          <!-- Stripe -->
          <div class="payment-option-card">
            <div class="payment-option-header">
              <div class="payment-icon">üí≥</div>
              <h4>Stripe</h4>
            </div>
            <p>Pay with credit/debit card via Stripe</p>
            <% if (stripeConfigured) { %>
              <form method="post" action="/create-stripe-checkout">
                <input type="hidden" name="cartTotal" value="<%= total.toFixed(2) %>">
                <input type="hidden" name="currency" value="<%= displayCurrency %>">
                <input type="hidden" name="bnplMonths" value="<%= locals.bnplMonths || '' %>">
                <button type="submit" class="btn btn-primary btn-lg w-100">
                  Pay with Stripe
                </button>
              </form>
            <% } else { %>
              <button type="button" class="btn btn-secondary btn-lg w-100" disabled>
                Stripe Not Configured
              </button>
              <small class="text-muted mt-2 d-block">Configure Stripe API keys to enable this payment method</small>
            <% } %>
          </div>
        </div>

        <!-- Back to Checkout -->
        <div class="text-center mt-4">
          <a href="/checkout" class="btn btn-outline-secondary">
            ‚Üê Back to Checkout
          </a>
        </div>
      </div>
    </div>
  </div>

  <% if (paypalConfigured) { %>
  <script src="https://www.paypal.com/sdk/js?client-id=<%= process.env.PAYPAL_CLIENT_ID %>&currency=SGD"></script>
  <script>
    paypal.Buttons({
      createOrder: function(data, actions) {
        return fetch('/create-paypal-order', { 
          method: 'post', 
          headers: { 'Content-Type': 'application/json' } 
        })
        .then(res => res.json())
        .then(data => data.id);
      },
      onApprove: function(data, actions) {
        return fetch('/capture-paypal-order', {
          method: 'post',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ orderID: data.orderID })
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            window.location.href = '/invoice/' + data.orderId;
          } else {
            alert('Payment failed. Please try again.');
          }
        })
        .catch(err => {
          console.error('Payment error:', err);
          alert('An error occurred. Please try again.');
        });
      },
      onError: function(err) {
        console.error('PayPal error:', err);
        alert('PayPal encountered an error. Please try again.');
      }
    }).render('#paypal-button-container');
  </script>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>