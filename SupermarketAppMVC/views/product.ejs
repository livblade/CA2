<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>Product Details - Ethan's Grains</title>
</head>
<body>
    <!-- Navigation bar with role-based menu items -->
    <nav class="navbar navbar-expand-sm navbar-custom">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <span class="brand-icon">üè™</span> Ethan's Grains
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav ms-auto">
              <!-- Show admin menu items only for admin users -->
              <% if (user.role === "admin") { %>
                <li class="nav-item">
                  <a class="nav-link" href="/inventory">Inventory</a>
                </li> 
                <li class="nav-item">
                  <a class="nav-link" href="/addProduct">Add Product</a>
                </li> 
              <% } else { %>
                <!-- Show shopping link for regular users -->
                <li class="nav-item">
                  <a class="nav-link" href="/shopping">Shop</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/cart">Cart</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/orders">Orders</a>
                </li>
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              <li class="nav-item">
                <!-- Dark mode toggle button -->
                <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
              </li>
            </ul>
          </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Welcome box showing current user -->
        <div class="welcome-box">
            <p>Welcome, <strong><%= user.username %></strong> (<%= user.role %>)</p>
        </div>

        <!-- Page header -->
        <div class="page-header">
            <h2>Product Details</h2>
        </div>

        <!-- Check if product data exists before rendering -->
        <% if (product) { %>
            <!-- Product details card -->
            <div style="background: white; padding: 2rem; border-radius: 0.75rem; box-shadow: 0 2px 8px rgba(0,0,0,0.05); max-width: 600px; margin: 0 auto;">
                <!-- Product name -->
                <div class="mb-3">
                    <strong style="color: #1e40af;">Product Name:</strong>
                    <p><%= product.productName %></p>
                </div>

                <!-- Product image -->
                <div class="mb-3">
                    <strong style="color: #1e40af;">Product Image:</strong><br>
                    <img src="../images/<%= product.image %>" class="product-img" style="max-width: 300px; margin-top: 0.5rem;">
                </div>

                <!-- Category badge -->
                <div class="mb-3">
                    <strong style="color: #1e40af;">Category:</strong><br>
                    <span class="category-badge"><%= product.category || 'N/A' %></span>
                </div>

                <!-- Stock quantity -->
                <div class="mb-3">
                    <strong style="color: #1e40af;">Stock Available:</strong>
                    <p><%= product.quantity %> units</p>
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <strong style="color: #1e40af;">Price:</strong>
                    <p style="font-size: 1.25rem; color: #10b981; font-weight: 700;">$<%= product.price.toFixed(2) %></p>
                </div>

                <!-- Description -->
                <div class="mb-4">
                    <strong style="color: #1e40af;">Description:</strong>
                    <p><%= product.description || 'No description available.' %></p>
                </div>

                <!-- Back button - destination depends on user role -->
                <div class="text-center">
                    <% if (user.role === "admin") { %>
                      <a href="/inventory" class="btn btn-primary">‚Üê Back to Inventory</a>
                    <% } else { %>
                      <a href="/shopping" class="btn btn-success">‚Üê Back to Shopping</a>
                    <% } %>
                </div>
            </div>
        <% } else { %>
            <!-- Display message if product not found -->
            <p class="text-center">No product found.</p>
        <% } %>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Dark mode theme manager -->
    <script src="/js/theme.js"></script>
</body>
</html>
