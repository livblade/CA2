<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/chatbot.css">
  <title>Shop - Ethan's Grains</title>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/wishlist">Shopping List</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <!-- Dark mode toggle button -->
            <button id="theme-toggle" class="theme-toggle nav-link">üåô Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hidden flash messages for toast conversion -->
  <script id="flash-messages" type="application/json">
    {
      "success": <%- JSON.stringify(messages || []) %>,
      "errors": <%- JSON.stringify(errors || []) %>,
      "info": <%- JSON.stringify(info || []) %>
    }
  </script>

  <div class="container mt-4">
    <!-- Welcome box -->
    <div class="welcome-box">
      <p>Welcome, <strong><%= user.username %></strong>!</p>
    </div>

    <!-- Page header -->
    <div class="page-header">
      <h2>Shop Ethan's Products!</h2>
    </div>

    <!-- Toast container will be inserted here by JavaScript -->

    <!-- Search and Filter Section -->
    <div class="search-filter-section">
      <!-- Search bar -->
      <form method="get" action="/shopping" class="mb-3">
        <div class="input-group">
          <input class="form-control" type="search" name="q" placeholder="Search products..." 
                 value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
          <button class="btn btn-primary" type="submit">Search</button>
          <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
            <a href="/shopping" class="btn btn-outline-primary">Clear</a>
          <% } %>
        </div>
      </form>

      <!-- Filters -->
      <form method="get" action="/shopping">
        <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
          <input type="hidden" name="q" value="<%= searchQuery %>">
        <% } %>
        <div class="row g-3">
          <div class="col-md-3">
            <label class="filter-label">Category</label>
            <select name="category" class="form-select">
              <option value="">All Categories</option>
              <option value="Fruit" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Fruit') ? 'selected' : '' %>>Fruit</option>
              <option value="Vegetable" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Vegetable') ? 'selected' : '' %>>Vegetable</option>
              <option value="Meat" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Meat') ? 'selected' : '' %>>Meat</option>
              <option value="Dairy" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Dairy') ? 'selected' : '' %>>Dairy</option>
              <option value="Bakery" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Bakery') ? 'selected' : '' %>>Bakery</option>
              <option value="Other" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Other') ? 'selected' : '' %>>Other</option>
            </select>
          </div>
          <div class="col-md-2">
            <label class="filter-label">Min Price</label>
            <input type="number" name="minPrice" class="form-control" placeholder="$0.00" step="0.01" min="0"
                   value="<%= typeof minPrice !== 'undefined' ? minPrice : '' %>">
          </div>
          <div class="col-md-2">
            <label class="filter-label">Max Price</label>
            <input type="number" name="maxPrice" class="form-control" placeholder="$99.99" step="0.01" min="0"
                   value="<%= typeof maxPrice !== 'undefined' ? maxPrice : '' %>">
          </div>
          <div class="col-md-3">
            <label class="filter-label">Sort by Price</label>
            <select name="sort" class="form-select">
              <option value="">Default</option>
              <option value="price_asc" <%= (typeof selectedSort !== 'undefined' && selectedSort === 'price_asc') ? 'selected' : '' %>>Low to High</option>
              <option value="price_desc" <%= (typeof selectedSort !== 'undefined' && selectedSort === 'price_desc') ? 'selected' : '' %>>High to Low</option>
            </select>
          </div>
          <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">Apply</button>
          </div>
        </div>
      </form>
    </div>

    <!-- Products Grid - Card Layout -->
    <div class="row g-4">
      <% products.forEach(function(product) { %>
        <% 
          const isOutOfStock = parseInt(product.quantity, 10) === 0;
          const isLowStock = !isOutOfStock && parseInt(product.quantity, 10) < 5;
        %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="product-card <%= isOutOfStock ? 'product-card-disabled' : '' %> <%= isLowStock ? 'product-card-low-stock' : '' %>">
            <!-- Product Image -->
            <div class="product-card-image">
              <% if (product.image) { %>
                <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="img-fluid">
              <% } else { %>
                <div class="product-card-no-image">No Image</div>
              <% } %>
              
              <!-- Stock Badge -->
              <% if (isOutOfStock) { %>
                <span class="product-badge badge-out-of-stock">Out of Stock</span>
              <% } else if (isLowStock) { %>
                <span class="product-badge badge-low-stock">Low Stock</span>
              <% } %>
            </div>

            <!-- Product Info -->
            <div class="product-card-body">
              <!-- Category Badge -->
              <span class="category-badge"><%= product.category || 'N/A' %></span>
              
              <!-- Product Name -->
              <h5 class="product-card-title">
                <a href="/product/<%= product.id %>"><%= product.productName %></a>
              </h5>
              
              <!-- Description -->
              <% if (product.description) { %>
                <p class="product-card-description">
                  <%= product.description.length > 60 ? product.description.substring(0,60) + '...' : product.description %>
                </p>
              <% } %>
              
              <!-- Price and Stock Info -->
              <div class="product-card-info">
                <div class="product-card-price">$<%= (parseFloat(product.price) || 0).toFixed(2) %></div>
                <div class="product-card-stock">
                  <% if (!isOutOfStock) { %>
                    <%= product.quantity %> in stock
                  <% } %>
                </div>
              </div>

              <!-- Add to Cart Form -->
              <% if (!isOutOfStock) { %>
                <form action="/cart/add/<%= product.id %>" method="post" class="product-card-form">
                  <div class="product-card-quantity">
                    <label for="qty-<%= product.id %>" class="visually-hidden">Quantity</label>
                    <input type="number" 
                           id="qty-<%= product.id %>"
                           name="quantity" 
                           value="1" 
                           min="1" 
                           max="<%= product.quantity %>" 
                           class="qty-input">
                    <button type="submit" class="btn btn-success btn-block">
                      <span class="btn-icon">üõí</span> Add to Cart
                    </button>
                  </div>
                </form>
                
                <!-- Add to Wishlist Button -->
                <form action="/wishlist/add/<%= product.id %>" method="post" class="mt-2">
                  <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                    ‚ù§Ô∏è Add to Shopping List
                  </button>
                </form>
              <% } else { %>
                <button type="button" class="btn btn-secondary btn-block" disabled>
                  <span class="btn-icon">üö´</span> Unavailable
                </button>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <!-- Empty State -->
    <% if (products.length === 0) { %>
      <div class="empty-state">
        <div class="empty-state-icon">üì¶</div>
        <h3>No products found</h3>
        <p>Try adjusting your search or filters</p>
        <a href="/shopping" class="btn btn-primary">Clear Filters</a>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/toast.js"></script>
  <script src="/js/theme.js"></script>
  <script src="/js/chatbot.js"></script>
</body>
</html>