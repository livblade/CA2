<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>User Details - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">ğŸª</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="page-header">
      <h2>User Details</h2>
    </div>

    <% if (user) { %>
      <div class="user-detail-container">
        
        <!-- User Header Card -->
        <div class="user-detail-card">
          <div class="user-detail-header">
            <div class="user-avatar">
              <%= user.username.charAt(0).toUpperCase() %>
            </div>
            <div>
              <h3 class="user-detail-name"><%= user.username %></h3>
              <span class="category-badge <%= user.role === 'admin' ? 'badge-admin' : 'badge-user' %>">
                <%= user.role === 'admin' ? 'ğŸ‘‘ Administrator' : 'ğŸ‘¤ User' %>
              </span>
            </div>
          </div>
        </div>

        <!-- User Information Card -->
        <div class="user-detail-card">
          <h4 class="user-detail-section-title">Contact Information</h4>
          
          <div class="user-detail-grid">
            <div class="user-detail-item">
              <span class="user-detail-label">ğŸ“§ Email</span>
              <span class="user-detail-value"><%= user.email %></span>
            </div>

            <div class="user-detail-item">
              <span class="user-detail-label">ğŸ“ Contact</span>
              <span class="user-detail-value"><%= user.contact || 'Not provided' %></span>
            </div>

            <div class="user-detail-item">
              <span class="user-detail-label">ğŸ“ Address</span>
              <span class="user-detail-value"><%= user.address || 'Not provided' %></span>
            </div>

            <div class="user-detail-item">
              <span class="user-detail-label">ğŸ†” User ID</span>
              <span class="user-detail-value">#<%= user.id %></span>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="user-detail-actions">
          <a href="/users" class="btn btn-primary">â† Back to Users</a>
          <a href="/users/edit/<%= user.id %>" class="btn btn-success">âœï¸ Edit User</a>
        </div>
      </div>
    <% } else { %>
      <p class="text-center">User not found.</p>
      <div class="text-center mt-3">
        <a href="/users" class="btn btn-primary">â† Back to Users</a>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>
