<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>User Management - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">ğŸª</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hidden flash messages -->
  <script id="flash-messages" type="application/json">
    {
      "success": <%- JSON.stringify(messages || []) %>,
      "errors": <%- JSON.stringify(errors || []) %>,
      "info": <%- JSON.stringify(info || []) %>
    }
  </script>

  <div class="container mt-4">
    <div class="welcome-box">
      <p>Admin: <strong><%= user.username %></strong>!</p>
    </div>

    <div class="page-header">
      <h2>User Management</h2>
    </div>

    <!-- Toast container will be inserted here by JavaScript -->

    <!-- Search Section -->
    <div class="search-filter-section">
      <form method="get" action="/users" class="mb-3">
        <div class="input-group">
          <input class="form-control" type="search" name="q" placeholder="Search users by name, email or ID..." 
                 value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
          <button class="btn btn-primary" type="submit">ğŸ” Search</button>
          <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
            <a href="/users" class="btn btn-outline-primary">Clear</a>
          <% } %>
        </div>
      </form>

      <!-- Add New User Button -->
      <div class="mb-3">
        <a href="/register" class="btn btn-success">â• Add New User</a>
      </div>
    </div>

    <!-- Users Grid -->
    <div class="row g-4">
      <% users.forEach(function(userData) { %>
        <div class="col-12 col-sm-6 col-md-4 col-xl-3">
          <div class="user-card">
            <div class="product-card-body">
              <!-- User Avatar -->
              <div class="user-avatar" style="margin: 0 auto 1rem auto;">
                <%= userData.username.charAt(0).toUpperCase() %>
              </div>

              <!-- User Name -->
              <h5 class="user-card-name text-center">
                <a href="/users/<%= userData.id %>"><%= userData.username %></a>
              </h5>

              <!-- Role Badge -->
              <div class="text-center mb-3">
                <span class="category-badge <%= userData.role === 'admin' ? 'badge-admin' : 'badge-user' %>">
                  <%= userData.role === 'admin' ? 'ğŸ‘‘ Admin' : 'ğŸ‘¤ User' %>
                </span>
              </div>

              <!-- User Details -->
              <div class="user-card-detail">
                <span>ğŸ“§</span>
                <span style="word-break: break-all;"><%= userData.email %></span>
              </div>

              <% if (userData.contact) { %>
                <div class="user-card-detail">
                  <span>ğŸ“</span>
                  <span><%= userData.contact %></span>
                </div>
              <% } %>

              <% if (userData.address) { %>
                <div class="user-card-detail">
                  <span>ğŸ“</span>
                  <span style="word-break: break-word;"><%= userData.address %></span>
                </div>
              <% } %>

              <!-- User Actions -->
              <div class="admin-actions" style="margin-top: 1rem; display: grid; grid-template-columns: 1fr 1fr; gap: 0.5rem;">
                <a href="/users/<%= userData.id %>" class="btn btn-primary btn-sm" style="grid-column: 1 / -1;">
                  ğŸ‘ï¸ View Details
                </a>
                
                <!-- Promote/Demote Button - Only show appropriate action -->
                <% if (userData.role === 'user') { %>
                  <form method="POST" action="/users/promote/<%= userData.id %>" style="grid-column: 1 / -1;">
                    <button type="submit" class="btn btn-success btn-sm w-100" 
                            onclick="return confirm('Promote <%= userData.username %> to admin?')">
                      â¬†ï¸ Promote to Admin
                    </button>
                  </form>
                <% } else if (userData.role === 'admin') { %>
                  <form method="POST" action="/users/demote/<%= userData.id %>" style="grid-column: 1 / -1;">
                    <button type="submit" class="btn btn-warning btn-sm w-100" 
                            onclick="return confirm('Demote <%= userData.username %> to user?')">
                      â¬‡ï¸ Demote to User
                    </button>
                  </form>
                <% } %>
                
                <a href="/users/delete/<%= userData.id %>" class="btn btn-danger btn-sm" style="grid-column: 1 / -1;"
                   onclick="return confirm('Delete <%= userData.username %>?')">
                  ğŸ—‘ï¸ Delete User
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/toast.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>
