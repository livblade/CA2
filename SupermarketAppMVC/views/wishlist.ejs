<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/chatbot.css">
  <title>Shopping List - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/wishlist">Shopping List</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <script id="flash-messages" type="application/json">
    {
      "success": <%- JSON.stringify(messages || []) %>,
      "errors": <%- JSON.stringify(errors || []) %>,
      "info": <%- JSON.stringify(info || []) %>
    }
  </script>

  <div class="container mt-4">
    <div class="welcome-box">
      <p>Welcome, <strong><%= user.username %></strong>!</p>
    </div>

    <div class="page-header">
      <h2>üìù My Shopping List</h2>
    </div>

    <% if (!wishlist || wishlist.length === 0) { %>
      <div class="empty-state">
        <div class="empty-state-icon">üìù</div>
        <h3>Your shopping list is empty</h3>
        <p>Add products you want to buy later to keep track of them</p>
        <a href="/shopping" class="btn btn-success">Browse Products</a>
      </div>
    <% } else { %>
      <!-- Action Buttons -->
      <div class="wishlist-actions mb-4">
        <form method="post" action="/wishlist/move-to-cart" style="display: inline;">
          <button type="submit" class="btn btn-success">
            üõí Add All to Cart
          </button>
        </form>
        <form method="post" action="/wishlist/clear" style="display: inline;">
          <button type="submit" class="btn btn-outline-danger" 
                  onclick="return confirm('Clear entire shopping list?')">
            üóëÔ∏è Clear List
          </button>
        </form>
        <span class="wishlist-count-badge">
          <%= wishlist.length %> <%= wishlist.length === 1 ? 'item' : 'items' %>
        </span>
      </div>

      <!-- Wishlist Items -->
      <div class="row g-4">
        <% wishlist.forEach(function(item) { %>
          <%
            const isOutOfStock = parseInt(item.quantity, 10) === 0;
            const isLowStock = !isOutOfStock && parseInt(item.quantity, 10) < 5;
          %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="wishlist-card <%= isOutOfStock ? 'wishlist-card-disabled' : '' %>">
              <!-- Product Image -->
              <div class="wishlist-card-image">
                <% if (item.image) { %>
                  <img src="/images/<%= item.image %>" alt="<%= item.productName %>">
                <% } else { %>
                  <div class="product-card-no-image">üì¶</div>
                <% } %>
                
                <% if (isOutOfStock) { %>
                  <span class="product-badge badge-out-of-stock">Out of Stock</span>
                <% } else if (isLowStock) { %>
                  <span class="product-badge badge-low-stock">Low Stock</span>
                <% } %>
              </div>

              <!-- Product Info -->
              <div class="wishlist-card-body">
                <span class="category-badge"><%= item.category || 'N/A' %></span>
                
                <h5 class="wishlist-item-name">
                  <a href="/product/<%= item.productId %>"><%= item.productName %></a>
                </h5>

                <% if (item.description) { %>
                  <p class="wishlist-item-description">
                    <%= item.description.length > 80 ? item.description.substring(0,80) + '...' : item.description %>
                  </p>
                <% } %>

                <div class="wishlist-item-price">
                  $<%= (parseFloat(item.price) || 0).toFixed(2) %>
                  <% if (!isOutOfStock) { %>
                    <span class="wishlist-stock-badge">
                      <%= item.quantity %> in stock
                    </span>
                  <% } %>
                </div>

                <!-- Notes Section -->
                <% if (item.notes) { %>
                  <div class="wishlist-notes">
                    <small>üìå <%= item.notes %></small>
                  </div>
                <% } %>

                <!-- Actions -->
                <div class="wishlist-card-actions">
                  <% if (!isOutOfStock) { %>
                    <form method="post" action="/cart/add/<%= item.productId %>" class="d-inline">
                      <input type="hidden" name="quantity" value="1">
                      <button type="submit" class="btn btn-success btn-sm">
                        üõí Add to Cart
                      </button>
                    </form>
                  <% } %>
                  
                  <form method="post" action="/wishlist/remove/<%= item.productId %>" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm"
                            onclick="return confirm('Remove from shopping list?')">
                      ‚ùå
                    </button>
                  </form>
                </div>

                <div class="wishlist-added-date">
                  Added <%= new Date(item.addedAt).toLocaleDateString() %>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/toast.js"></script>
  <script src="/js/theme.js"></script>
  <script src="/js/chatbot.js"></script>
</body>
</html>
